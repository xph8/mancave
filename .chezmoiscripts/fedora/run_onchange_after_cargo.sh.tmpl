#!/usr/bin/env sh

{{- if ne .chezmoi.os "linux" }}
exit 0
{{- end }}

set -eufo pipefail

echo "ï€“ configuring cargo"

which cargo
if [[ $? != 0 ]]; then
    rustup-init  # FIXME automate this
fi

declare -a packages=(
    atuin
    cargo-update
    onefetch
    starship
    topgrade
)

for package in "${packages[@]}"; do
    cargo install $package
done
