[user]
    name = {{ .data.username }}
    email = {{ .data.email }}
[init]
    defaultBranch = master
[core]
    editor = micro
    ignorecase = false
    excludesfile = ~/.gitignore_global
[credentials]
{{- if eq .chezmoi.os "linux" }}
    helper = !/usr/bin/gh auth git-credential
{{- end }}
{{- if eq .chezmoi.os "darwin" }}
    helper = osxkeychain
{{- end }}
[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    grep = auto
    ui = auto
