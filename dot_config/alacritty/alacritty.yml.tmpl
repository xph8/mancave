window:
{{- if eq .chezmoi.os "linux" }}
  title: mancave
{{- else if eq .chezmoi.os "darwin" }}
  title: workstation
{{- end }}
  dimensions:
    columns: 150
    lines: 30
  padding:
    x: 5
    y: 5

shell:
{{- if eq .chezmoi.os "linux" }}
  program: /usr/bin/tmux
{{- else if eq .chezmoi.os "darwin" }}
  program: /usr/local/bin/tmux
{{- end }}
  args:  # create or attach a session
    - new-session
    - -A
    - -s
    - main

font:
{{- if eq .chezmoi.os "linux" }}
  size: 10
{{- else if eq .chezmoi.os "darwin" }}
  size: 14
{{- end }}
  normal:
    family: JetBrainsMonoNL Nerd Font
    style: Regular
  bold:
    family: JetBrainsMonoNL Nerd Font
    style: Bold
  italic:
    family: JetBrainsMonoNL Nerd Font
    style: Italic
  bold_italic:
    family: JetBrainsMonoNL Nerd Font
    style: Bold Italic

cursor:
  style:
    shape: Block
    blinking: Off

schemes:
  DantalianNordic: &DantalianNordic
    primary:
      background: '0x131517'
      foreground: '0xdadada'
    normal:
      black:   '0x1e1e1e'
      red:     '0xbf616a'
      green:   '0xa7b594'
      yellow:  '0xebcb8b'
      blue:    '0x81a1c1'
      magenta: '0xb48ead'
      cyan:    '0x8f9fb4'
      white:   '0xc0c0c0'
    bright:
      black:   '0x52565f'
      red:     '0xbf616a'
      green:   '0x98bf5b'
      yellow:  '0xebcb8b'
      blue:    '0x81a1c1'
      magenta: '0xb48ead'
      cyan:    '0x8f9fb4'
      white:   '0xc0c0c0'

colors: *DantalianNordic

env:
  TERM: xterm-256color

live_config_reload: true
