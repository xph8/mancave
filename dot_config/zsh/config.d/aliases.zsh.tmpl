#---------------------------------------------
# system
#---------------------------------------------

alias e="micro"

alias ls="lsd"
alias lsa="yazi"
alias cat="bat"

alias du1="du -h --max-depth 1"

alias lgit="lazygit"

alias stl="systemctl --user"

#---------------------------------------------
# utility
#---------------------------------------------

# task file
{{- if eq .chezmoi.os "linux" }}
alias task="go-task"
alias tg="go-task --global"
{{- else if eq .chezmoi.os "darwin" }}
alias tg="task --global"
{{- end }}

# clipboard
{{- if eq .chezmoi.os "linux" }}
alias cbcopy="wl-copy"
alias cbpaste="wl-paste"
{{- else if eq .chezmoi.os "darwin" }}
alias cbcopy="pbcopy"
alias cbpaste="pbpaste"
{{- end }}

# scratchpad notebook
alias nb="tmux new-session -d -s scratchpad 'yazi ~/Auxiliary/scratchpad'"

#---------------------------------------------
# infra
#---------------------------------------------

# k8s
alias cri="crictl"
alias nc="nerdctl"
alias etl="etcdctl"

alias kc="kubectl"
alias -g dn="config set-context --current --namespace"
alias -g dry-yaml="--dry-run=client -o yaml"

alias kb="kubebuilder"
alias mk="minikube"
alias tf="terraform"

#---------------------------------------------
# osx
#---------------------------------------------

{{ if eq .chezmoi.os "darwin" }}
alias sw="switch"
INSTALLATION_PATH=$(brew --prefix switch) && source $INSTALLATION_PATH/switch.sh
{{- end }}

#---------------------------------------------
# linux
#---------------------------------------------

{{ if eq .chezmoi.os "linux" }}
# audio
alias cava="TERM=st-256color cava"
alias ncp="tmux new-session -d -s ncmpcpp 'ncmpcpp'"

alias say="cowsay"

function code() {
  (flatpak run com.visualstudio.code $*)
}

function firefox() {
  (flatpak run org.mozilla.firefox $*)
}

alias dl="noglob yt-dlp"

alias fpk="flatpak"
{{- end }}
