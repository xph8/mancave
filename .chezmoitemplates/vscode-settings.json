{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnType": false
    },
    "accessibility.dimUnfocused.enabled": true,
    "accessibility.dimUnfocused.opacity": 0.85,
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": false,
    "editor.accessibilitySupport": "off",
    "editor.fontFamily": "'JetBrainsMonoNL NF', 'monospace', monospace",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.fileNesting.enabled": true,
    "extensions.autoUpdate": true,
    "files.autoSave": "onFocusChange",
    "files.trimTrailingWhitespace": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.enableStatusBarSync": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.defaultTimeFormat": null,
    "gitlens.graph.dateFormat": null,
    "gitlens.graph.minimap.dataType": "lines",
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.telemetry.enabled": false,
    "gitlens.views.commitDetails.avatars": false,
    "go.toolsManagement.autoUpdate": false,
    "material-icon-theme.folders.theme": "classic",
    "redhat.telemetry.enabled": false,
    "scm.diffDecorationsGutterAction": "diff",
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.fontFamily": "JetBrainsMonoNL NF",
    "terminal.integrated.profiles.linux": {
        "zsh": {
            "args": [
                "--host",
                "--env=TERM=xterm-256color",
                "zsh"
            ],
            "path": "/usr/bin/flatpak-spawn"
        }
    },
    "terminal.integrated.profiles.osx": {
        "zsh": {
            "path": "/usr/local/bin/zsh"
        }
    },
    "update.mode": "none",
    "update.showReleaseNotes": false,
    "vs-kubernetes": {
        "vs-kubernetes.crd-code-completion": "disabled"
    },
    "window.menuBarVisibility": "compact",
    "window.newWindowDimensions": "maximized",
    "window.titleBarStyle": "custom",
    "window.zoomLevel": 1,
    "workbench.activityBar.location": "top",
    "workbench.colorTheme": "Dainty â€“ Nord (chroma 0, lightness 0)",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.layoutControl.enabled": false,
    "workbench.startupEditor": "none",
    "yaml.schemas": {
        "kubernetes": "*.yaml"
    }
}